{
"name": "podbbang-helper-monorepo",
"private": true,

"workspaces": [
    "webapp",
    "electronApp",
    "vercel-proxy"
],

  "scripts": {
    "bootstrap": "npm install --workspaces --include-workspace-root",

    "dev:web": "npm --workspace webapp run dev",
    "dev:electron": "npm --workspace electronApp run dev",

    "build:electron": "npm --workspace electronApp run build",
    "build:web": "npm --workspace webapp run build",
    
    "proxy:dev": "npm --workspace vercel-proxy run start",
    "proxy:deploy": "npm --workspace vercel-proxy run deploy"
  }
}
  